{
  "name": "ideaforge-api",
  "version": "1.0.0",
  "description": "Azure Functions API for IdeaForge application",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force .\\dist -ErrorAction SilentlyContinue\"",
    "clean:build": "npm run clean && npm run build",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "init-tables": "node scripts/init-tables.js",
    "init-tables-azure": "node scripts/init-tables-azure.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@azure/data-tables": "^13.0.0",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^3.4.0",
    "@azure/search-documents": "^11.3.0",
    "@azure/storage-blob": "^12.15.0",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "busboy": "^1.6.0",
    "openai": "^4.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/node": "^18.19.0",
    "@types/uuid": "^9.0.7",
    "azure-functions-core-tools": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
